html(ng-app="privnote")
  head
    title!= title
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js")
    script(src="/static/pbkdf2.js")
    script(src="/static/frontend.js")
    script(src="/static/openpgp.min.js")
    script(src="/static/aes.js")
    script(src="/static/sha256.min.js")
  body
    h1!= message
    div(id="keys", ng-controller="encryption")
        textarea(ng-model="data", rows="30", cols="100", placeholder="Enter message here")
        br
        input(type="text", ng-model="password")
        input(type="checkbox", name="vehicle", value="Car", checked)
        | Delete after successfully retrieved
        input(ng-click="submit()", type="submit", value="Submit")

