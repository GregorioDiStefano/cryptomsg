html(ng-app="privnote")
  head
    script(src="/static/angular.min.js")
    script(src="/static/pbkdf2.js")
    script(src="/static/frontend.js")
    script(src="/static/aes.js")
    script(src="/static/ngDialog.min.js")
    script(src="/static/FileSaver.min.js")
    script(src="/static/sweetalert.min.js")

    link(rel="stylesheet", type="text/css", href="/static/ngDialog-theme-default.min.css")
    link(rel="stylesheet", type="text/css", href="/static/ngDialog.min.css")
    link(rel="stylesheet", type="text/css", href="/static/style.css")
    link(rel="stylesheet", type="text/css", href="/static/sweetalert.css")

  body
    div(id="decryption", ng-controller="decryption")
        if (one_time_read)
            div(class="center_div alert-box warning read_once_alert")
                span warning: 
                | The encrypted message/data will be destroy 5 minutes after pressing the button.
        div(id="decryption_form", class="center")
            input(ng-model="password", placeholder="password", type="text")
            input(ng-click="decrypt()", type="submit", value="Decrypt")
        br
        textarea(ng-model="message_view", ng-hide="!message_view", class="center_div", rows="30", cols="100")
